{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts",
      "shims-tsx.d.ts",
      "node_modules/@tarojs/plugin-platform-weapp/types",
      "../../ant-mobile-icon-taro/dist/index.vue.d.ts"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["./src/components/*"],
      "demos": ["ant-mobile-taro/src/demos/*"],
      "ant-mobile-taro": ["ant-mobile-taro/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
